extends header

block content
	h1 Forms
	form.col-6
		.col-8
			.form-group
				label Title 
				input(type="text")
		.col-4
			.form-group
				label From 
				select
					option Admin
					option Sudo
					option User
		.col-12
			.form-group 
				label Content 
				textarea
